<%- include('partials/header') %>

<div class="detail-section">
  <h1>Search</h1>

  <form method="GET" action="/search" style="margin-bottom: 2rem;">
    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
      <input type="text" name="q" value="<%= q %>" placeholder="Search across all libraries..." style="flex: 1; min-width: 200px; padding: 0.5rem;">
      <select name="library" style="padding: 0.5rem;">
        <option value="">All Libraries</option>
        <option value="techniques" <%= library === 'techniques' ? 'selected' : '' %>>Techniques</option>
        <option value="journal" <%= library === 'journal' ? 'selected' : '' %>>Journal</option>
        <option value="github" <%= library === 'github' ? 'selected' : '' %>>GitHub</option>
        <option value="wiki" <%= library === 'wiki' ? 'selected' : '' %>>Wiki</option>
      </select>
      <button type="submit" class="btn">Search</button>
    </div>
  </form>

  <% if (q && results.length === 0) { %>
    <div class="empty-state">
      <p>No results found for "<%= q %>". Try a different search term or broaden your library filter.</p>
    </div>
  <% } %>

  <% if (results.length > 0) { %>
    <p style="margin-bottom: 1rem; color: #666;"><%= total %> result<%= total !== 1 ? 's' : '' %> found</p>

    <% results.forEach(function(r) { %>
      <div class="card">
        <div class="card-title">
          <a href="<%= r.url %>"><%= r.title %></a>
        </div>
        <div class="card-meta">
          <span class="badge"><%= r.library %></span>
          <span class="badge"><%= r.type %></span>
        </div>
        <% if (r.snippet) { %>
          <p style="margin-top: 0.5rem; color: #555;"><%= r.snippet %></p>
        <% } %>
      </div>
    <% }); %>
  <% } %>
</div>

<%- include('partials/footer') %>
