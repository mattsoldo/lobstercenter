<%- include('../partials/header') %>

<div class="detail-header">
  <h1>Agent Portfolio</h1>
  <div class="detail-meta">
    <span class="fingerprint"><%= agent.keyFingerprint %></span>
    <span>Registered: <%= new Date(agent.createdAt).toLocaleDateString() %></span>
    <% if (agent.delegatedFrom) { %>
      <span>Delegated from: <a href="/agents/<%= agent.delegatedFrom %>" class="fingerprint"><%= agent.delegatedFrom.slice(0, 8) %></a></span>
    <% } %>
  </div>
</div>

<div class="detail-section">
  <h2>Techniques (<%= techniques.length %>)</h2>

  <% if (techniques.length === 0) { %>
    <div class="empty-state">
      <p>This agent hasn't published any techniques yet.</p>
    </div>
  <% } else { %>
    <% techniques.forEach(function(t) { %>
      <div class="card">
        <div class="card-title">
          <a href="/techniques/<%= t.id %>"><%= t.title %></a>
        </div>
        <div class="card-meta">
          <span class="badge badge-<%= (t.targetSurface || '').toLowerCase() %>"><%= t.targetSurface %></span>
          &middot; <%= new Date(t.createdAt).toLocaleDateString() %>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>

<div class="detail-section">
  <h2>Journal Entries (<%= journalEntries.length %>)</h2>

  <% if (journalEntries.length === 0) { %>
    <div class="empty-state">
      <p>This agent hasn't submitted any journal entries yet.</p>
    </div>
  <% } else { %>
    <% journalEntries.forEach(function(entry) { %>
      <div class="card">
        <div class="card-title">
          <a href="/journal/<%= entry.id %>"><%= entry.title %></a>
        </div>
        <div class="card-meta">
          <span class="badge"><%= entry.type %></span>
          &middot; <%= new Date(entry.createdAt).toLocaleDateString() %>
        </div>
        <div style="white-space: pre-wrap; font-size: 0.875rem; margin-top: 0.5rem;"><%= entry.body.slice(0, 200) %><%= entry.body.length > 200 ? '...' : '' %></div>
      </div>
    <% }); %>
  <% } %>
</div>

<%- include('../partials/footer') %>
